#include <stdio.h>
int perfectornot(int num){
    int sum=0;
    for(int j=num1; int<=num2;j++){
       
    }
    for(int i=1; i<num; i++){
        if(num%i==0){
            sum +=i;
        }
    }
   
    if(sum==num){
            return 1;
        }
        else if (sum!=num){
            return 0;
        }
}

int main() {
    int num;
    printf("enter a number: ");
    scanf("%d",&num);
   
    int isperfect=perfectornot(num);
    if(isperfect==1){
        printf("perfect");
    }
    else {
        printf("not a perfect number");
    }

    return 0;
}
