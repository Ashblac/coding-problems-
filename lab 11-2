#include<stdio.h>
 
int find_winner(int candidates[], int x);
int main(){
int candidates[50];
int i;
int choice=0;
for(i=0;i<50;i++){
candidates[i]=0;
}
 
printf("!!!Enter -1 to exit!!!\n");
 
    while(1){
printf("Enter the candidate number [1-50] you are voting for: \n");
scanf("%d",&choice);
if (choice== -1){
break;
}
if(choice>=1 && choice<=50){
candidates[choice-1]++;
}
else{
printf("Invalid candidate number");
}
}
 
int winner_index=find_winner(candidates,50);
 
 
for(i=0;i<50;i++){
printf("Votes received by candidate number %d = %d \n",i+1,candidates[i]);
}
 
printf("Candidate number %d won the election with %d votes!", winner_index+1, candidates[winner_index]);
 
return 0;
}
int find_winner(int candidates[], int x){
int max_index=0;
 
for(int i=0;i<x;i++){
if(candidates[i]>candidates[max_index]){
max_index=i;
}
}
 
return max_index;
}
