        scanf("%f",&num[i]);
        sum+=num[i];
    }
    avg=sum/10;
    printf("Average value of the array: %.2f\n",avg);

    for(int i=0;i<10;i++){
        if(num[i]<avg){
            numb[cntb]=num[i];
            cntb++;
        }
        else if (num[i]>=avg){
            numa[cnta]=num[i];
            cnta++;
        }
    }
    printf("Elements of array a: \n");
    for(int i=0;i<cnta;i++){
        printf("%.1f ",numa[i]);
    }
    printf("\nElements of array b: \n");
    for(int i=0;i<cntb;i++){
        printf("%.1f ",numb[i]);
    }


    return 0;
}
