#include<stdio.h>
int main(){
 
int age;
int count=0;
int sum=0;
int min=9999 ;
int max=-1;
int trimmedsum;
float average, trimmedaverage,trimmedcount;
 
int i;
while(1){
 
printf("Enter age ( 0 to exit ):");
scanf("%d",&age);
if(age==0){
break;
}
if(age<0 && age >999){
printf("!!! ERROR: Invalid age !!!");
continue;}
 
sum+=age;
if (age<min) min=age;
if (age>max) max=age;
count++;
}
 
average=(float)sum/count;
if(count>2){
trimmedsum= sum-min-max;
trimmedcount = count-2;
}
 
if (trimmedcount>0){
 
trimmedaverage=(float)trimmedsum/trimmedcount;
 
}
 
else {
 
trimmedaverage=0;
}
 
 
printf("-------------------------------\n");
printf("Total audience = %d people",count);
printf("Average age = %d",average);
if (count>2){
printf("Trimmed average =%.2f",min,max,trimmedaverage);
}
return 0;
}
