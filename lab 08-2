#include<stdio.h>
void function(int num){
int i;
int j;
int max;
int sum=0;

	for(i=1; i<num; i++){
		sum=0;
		for(j=1; j<i; j++){
		if(i%j==0){
			sum+=j;
		}	}
		if(sum>i){

			max=i;
		}
		printf("sum %d, i= %d\n", sum,i);
	}
printf("%d",max);
}

int main(){
	int number;
	printf("Enter number: ");
	scanf("%d",&number);
	while(number<=0){
		printf("Error!! Please enter a positive number! ");
		printf("\nEnter number: ");
	    scanf("%d",&number);
		}
		
		
	function(number);
		
	
	return 0;
	}
