int find_day(float gold[],float avg){
    float maxdiff=fabs(avg - gold[0]);
    int diff_index = 0;
    for(int i = 1; i < 30; i++) {
        float currentDiff = fabs(avg - gold[i]);
        
        if(currentDiff > maxdiff) {
            maxdiff = currentDiff;
            diff_index = i;
        }
    }
    
    return diff_index;
}

