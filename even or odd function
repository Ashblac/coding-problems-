#include <stdio.h>
void even_or_odd(int num){
    if(num%2==0){
        printf("\n The number is even.");
    }
    else{
        printf("\n The number is odd.");
    }
}
int main() {
    int number;
    printf("Enter an integer number: ");
    scanf("%d",&number);
    
    even_or_odd(number);


    return 0;
}
