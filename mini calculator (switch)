#include <stdio.h>

int main() {
  
    char op;
    int result;
    
    int num1,num2;
    
    printf("choose an operator: ");
    scanf(" %c",&op);
    printf("enter 2 numbers you want to operate with: ");
    scanf("%d %d",&num1,&num2);
    
    switch(op){
        case '*';
        result=num1*num2;
        printf("The result is= %d", result);
        break;
        case '+';
        result=num1+num2;
        printf("The result is= %d", result);
        break;
        case '-';
        result=num1-num2;
        printf("The result is= %d", result);
        break;
        case '/';
        result=num1/num2;
        printf("The result is= %d", result);
        break;
        default:
        printf("enter a valid operator");
    }

    return 0;
}
